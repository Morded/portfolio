---
import { info } from "../../src/data/info";

import Layout from "../../src/layouts//Layout.astro";
import Hero from "../../src/components/home/Hero.astro";
import Experience from "../../src/components/home/Experience.astro";
import ProjectsWrapper from "../../src/components/general/ProjectsWrapper.astro";
import SkillsWrapper from "../../src/components/general/SkillWrapper.astro";
import MetaHead from "../../src/components/general/MetaHead.astro";

const featureProjects = info.projects.map((project, index) => {
  if (project.isFeatured && index < 10) {
    return project;
  }
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Portfolio"}
      description={info.about}
      ogImageUrl={"/assets/images/portrait.png"}
    />
  </head>

  <body>
    <Layout>
      <Hero name={info.name} about={info.about} title={info.title} />
      <section>
        <h2 class="w-[15rem] dark:text-light mt-16">SKILLS</h2>
        <SkillsWrapper skills={info.skills}/>
      </section>
      <Experience title={"EXPERIENCE"} details={info.experience} />
      <Experience title={"EDUCATION"} details={info.education} />
      <section>
        <h2 class="w-[15rem] dark:text-light mt-16">PROJECTS</h2>
        <ProjectsWrapper projects={featureProjects} />
      </section>
    </Layout>
  </body>
</html>
