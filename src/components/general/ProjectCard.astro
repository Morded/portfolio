---
import { IProjectDetails } from "../../../src/types";
const { projectDetail } = Astro.props as IProjectDetails;
const { title, thumbnail, liveUrl, githubUrl } = projectDetail;
---

<article class="w-full sm:w-64 max-h-[25rem] overflow-hidden relative group">
  <div class="flex items-center absolute right-4 top-4 z-10">
    {
      githubUrl && (
        <a
          href={githubUrl}
          class="text-white p-3 bg-black/50 rounded-full backdrop-blur-md"
          aria-label="Social Media"
          target="_blank"
eg"
    class="w-auto h-auto flex flex-col gap-2 justify-center relative"
    loading="lazy"
    width="100%"
    height="100%"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-github peer"
          >
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
          </svg>
  <p class="absolute -left-2.5 text-white w-content whitespace-nowrap	bg-black p-2 peer-hover:mt-4 text-center opacity-0 peer-hover:opacity-100 transition-all ease-in-out duration-300">Github</p>
        </a>
      )
    }
  </div>

    {
      liveUrl ? (
        <a
          href={liveUrl}
          target="_blank"
        >
  <img
    src={thumbnail}
    class="w-full h-auto rounded-xl transition-all ease-in-out scale-100 group-hover:scale-95"
    loading="lazy"
    width="100%"
    height="100%"
    alt="featureImage"
  />
        </a>
          ) :
  <img
    src={thumbnail}
    class="w-full h-auto rounded-xl scale-100 group-hover:scale-125"
    loading="lazy"
    width="100%"
    height="100%"
    alt="featureImage"
  />
    }
  <div
    class="flex justify-center w-full dark:text-white p-4 transition duration-300"
  >
    <h3 class="mr-2 text-xl">{title}</h3>
  </div>
</article>
