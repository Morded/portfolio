---
import { IHeroProps } from "../../../src/types";

const { name, about, title } = Astro.props as IHeroProps;
---

<section>
  <p class="dark:text-light mt-[117px]">Hello, I'm an app developer based in Hungary</p>
  <div class="flex justify-between items-center">
    <div>
    <h1 class="leading-[1.2] font-extrabold">{name}</h1>
    <p class="text-[#686868] font-bold -translate-y-8">{title}</p>
    </div>
  <img
      src="/assets/images/portrait.jpeg"
      class="w-24 h-24 rounded-full border-2 border-green"
    loading="lazy"
    width="20px"
    height="20px"
    alt="Portfolio image"
  />
  </div>
  <div class="mt-6 mb-16">
  {about.map(item => (
  <p class="dark:text-light text-lg">
    {item}
  </p>
  ))}
  </div>
</section>
